.container
  = simple_form_for ([@user, @event], :url => user_event_path, :html => { :class => "form-horizontal" }) do |form|
    = form.input :name, :input_html => { :class => "span6" }, :label => "Event Name"
    = form.input :start, :input_html => { :class => "span1" }, :label => "Start Date & Time"
    = form.input :end, :input_html => { :class => "span1" }, :label => "End Date & Time"
    = form.input :description, :input_html => { :class => "span6" }, :label => "Event Description"
    = form.association :sites, :as => :check_boxes
    = form.button :submit, :class => "btn-primary btn-large span8"
