.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{:data => { :toggle => "collapse", :target => ".nav-collapse"} }
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to root_path, :class => "brand" do
        %strong
          Pittsburgh CONNECTS Centers
          = "> #{ip_to_name}" unless offsite?

      .nav-collapse.pull-right
        %ul.nav
          %li= link_to "View Events", events_path
          - if signed_in?
            %li= link_to "Profile", current_user
            %li= link_to "Sign out", signout_path, :method => :delete
          - else
            %li= link_to "Sign In", signin_path
            %li= link_to "Register with Us!", new_user_path

= render 'layouts/company_logos'
