- render "shared/title"

.container
  = simple_form_for @user, :html => { :class => "form-horizontal" } do |f|
    %h6 Personal Information
    = f.input :first, :label => 'First Name'
    = f.input :middle, :label => 'Middle Initial'
    = f.input :last, :label => 'Last Name'
    = f.input :birth_date, :start_year => Date.today.year - 150, :end_year => Date.today.year - 5
    = f.input :gender, :collection => ["Male", "Female", "Other"]
    = f.input :ethnicity, :collection => ["Black", "White", "Native American", "Asian / Pacific Islanders", "Hispanic", "Bi-Racial", "Other"]
    %h6 CONNECTS Information

    - # Registration hash for simple form f.input
    - reg_hash = { :label => "Registration Site", :collection => all_sites, :include_blank => false, :value_method => Proc.new { |v| v }, :selected => ip_to_name }

    = f.input :registered_at, reg_hash

    = submit_tag "Next Step", :class => "btn btn-large btn-primary"
